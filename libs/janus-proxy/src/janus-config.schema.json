{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "Janus proxy config file",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "gate": {
      "$id": "#gate",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "target": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "changeOrigin": {
          "type": "boolean",
          "default": false
        },
        "secure": {
          "type": "boolean",
          "default": false
        },
        "ws": {
          "type": "boolean",
          "default": false
        }
      },
      "required": ["target"]
    },
    "service": {
      "$id": "#service",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string"
        },
        "gates": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "$ref": "#gate"
          }
        }
      },
      "required": ["url", "gates"]
    }
  },
  "properties": {
    "proxy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "number",
          "default": 3000
        }
      }
    },
    "server": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "number",
          "default": 5000
        }
      }
    },
    "services": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#service"
      },
      "minProperties": 1
    }
  },
  "required": ["services"]
}
