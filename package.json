{
  "name": "janus",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libs/*",
    "samples/*"
  ],
  "scripts": {
    "janus": "yarn workspace @jujulego/janus start",
    "build": "yarn workspaces foreach -pvi --no-private --topological-dev run build",
    "lint": "yarn workspaces foreach -p run lint"
  },
  "devDependencies": {
    "@nestjs/cli": "8.0.2",
    "@nestjs/schematics": "8.0.2",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "typescript": "4.3.5"
  }
}
