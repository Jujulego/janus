{
  "extends": [
    "../../.eslintrc.json"
  ],
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {},

  "overrides": [
    {
      "files": "app/**",
      "extends": [
        "../../.eslintrc.json",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
      ],
      "parserOptions": {
        "project": "app/tsconfig.json"
      },
      "env": {
        "browser": true,
        "node": true
      },
      "plugins": [
        "react"
      ],
      "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off"
      },

      "settings": {
        "react": {
          "version": "detect"
        }
      }
    }
  ]
}
